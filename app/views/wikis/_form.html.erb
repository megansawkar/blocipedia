<%= form_for @wiki do |f| %>
  <% if wiki.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(wiki.errors.count, "error") %>.</h4>
      <ul>
        <% wiki.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for @wiki do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter Title here" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, class: 'form-control', placeholder: "Enter Info here" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success' %>
      <#%= link_to "Add/Delete Collaborator", wiki_collaborations_path(@wiki), class: 'btn btn-primary' %>
    </div>
    <% if current_user.admin? || current_user.premium? %>
      <div class="form-group">
        <%= f.label :private, class: 'checkbox' do %>
        <%= f.check_box :private %> Private wiki
        <% end %>
      </div>
      <h2>Collaborators</h2>
      <%= @wiki.collaborated_users.each do |collaborator| %>
        <p class="media-heading">
          <%= collaboration.email %>
        </p>
      <% end %>
    <% end %>
  <% end %>
<% end %>
