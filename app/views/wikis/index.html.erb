<h1>All Wikis</h1>
<div class="row">
  <div class="col-md-8">
    <% @wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, wiki %>
          </h4>
          <small>
            Created <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.username %>
          </small>
        </div>
      </div>
    <% end %>
  </div>

  <% if policy(@wiki).new? %>
    <div class="col-md-4">
      <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-success' %>
    </div >
  <% end %>
</div>
