<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class="media-left">
          <%= image_tag avatar_url, class: 'media-object' %>
        </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading">Profile Information</h2>
        <h4 class="media-heading">Your E-mail: <%= @user.email %></h2>
        <h4 class="media-heading">Your Username: <%= @user.username %></h2>
        <h4 class="media-heading">Membership Status: <%= @user.role %></h2>
      </div>
    </div>
  </div>
</div>

<h2>Create a New Wiki</h2>
<%= render partial: 'wikis/form', locals: { user: @user, wiki: Wiki.new } %>

<h2>Your Wikis</h2>
<%= render @user.wikis %>
